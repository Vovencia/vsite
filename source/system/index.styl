@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,400i,700&subset=cyrillic');

html,
body
	padding 0
	margin 0

html
	font-family: 'Roboto', Segoe UI,Frutiger,Frutiger Linotype,Dejavu Sans,Helvetica Neue,Arial,sans-serif;
	font-size 1px
	line-height 1
	size 100%
	color #fff
	background #777 url(../assets/images/backgrounds/digital_space_universe_4k_8k-3840x2160.jpg) center no-repeat
	background-size cover

body
	width 100%
	size 100%
	display flex
	flex-direction column
	flex-grow 1
	flex-shrink 1
	font-size 16rem

#App
	display flex
	flex-direction column
	flex-grow 1

*,
*:before,
*:after
	box-sizing padding-box
	box-sizing border-box

*::-webkit-scrollbar
	width: 10px;
	height: 10px;
	cursor none

*::-webkit-scrollbar-track
	background: #f1f1f1;
	cursor none

*::-webkit-scrollbar-thumb
	background: #888;
	cursor none

*::-webkit-scrollbar-thumb:hover
	background: #555;
	cursor none