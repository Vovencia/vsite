{
	"compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2017", "dom"],
		"outDir": "./docs",
		"watch": true,
		"sourceMap": true,
		"jsx": "react",
		"importHelpers": true,
		"module": "CommonJS",
		"baseUrl": ".",
		"paths": {
			"@system/*": ["./source/system/*"],
			"@utils/*": ["./source/utils/*"],
			"@components/*": ["./source/components/*"],
			"@apps/*": ["./source/apps/*"],
			"@assets/*": ["./source/assets/*"],
			"@interfaces/*": ["./source/interfaces/*"],
			"@mixins/*": ["./source/mixins/*"]
		}
	}
}